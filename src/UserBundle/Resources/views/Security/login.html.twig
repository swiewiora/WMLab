<!DOCTYPE html>
<html>
{{ block("head", "base.html.twig") }}

<body>
{% for type, messages in app.session.flashBag.all %}
  {% for message in messages %}
    <div class="alert alert-success alert-dismissable">
      <button type="{{ type }} button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      {{ message|trans({}, 'FOSUserBundle') }}
    </div>
  {% endfor %}
{% endfor %}

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Logowanie</h3>
        </div>
        <div class="panel-body">
          {% block fos_user_content %}
            {{ include('FOSUserBundle:Security:login_content.html.twig') }}
          {% endblock fos_user_content %}
        </div>
      </div>
      <a align="center"
         href="{{ path('fos_user_registration_register') }}"> {{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
    </div>
  </div>
</div>

{{ block("basejavascripts", "base.html.twig") }}
</body>

</html>