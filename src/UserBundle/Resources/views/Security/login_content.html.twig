<form role="form" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <fieldset>
        <div class="form-group">
            <input class="form-control" placeholder="{{ 'security.login.username'|trans }}" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

        </div>
        <div class="form-group">
            <input class="form-control" placeholder="{{ 'security.login.password'|trans }}" type="password" id="password" name="_password" required="required" />
        </div>
        <div class="checkbox">
            <label>
                <input name="_remember_me" name="remember" type="checkbox" value="Remember Me"  />
                {{ 'security.login.remember_me'|trans }}
            </label>
        </div>
        <!-- Change this to a button or input when using this as a form -->
        <input class="btn btn-lg btn-success btn-block" type="submit" id="_submit" name="_submit"
               value="{{ 'security.login.submit'|trans }}" />
    </fieldset>
</form>

