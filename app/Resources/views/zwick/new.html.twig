{% extends 'base.html.twig' %}
{#{% form_theme form _self %}#}

{#{% block form_errors -%}#}
  {#{% if errors|length > 0 -%}#}
    {#{% if form is not rootform %}<p class="help-block">{% else %}<div class="alert alert-danger">{% endif %}#}
    {#<ul class="list-unstyled">#}
        {#{%- for error in errors -%}#}
          {#<li><span class="glyphicon glyphicon-exclamation-sign"></span> {{ error.message }}</li>#}
        {#{%- endfor -%}#}
    {#</ul>#}
    {#{% if form is not rootform %}</p>{% else %}</div>{% endif %}#}
  {#{%- endif %}#}
{#{%- endblock form_errors %}#}

{% block body %}
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Nowe zadanie</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel-group" id="accordion">
        <div class="panel panel-default">
          <div class="panel-heading">
            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
              Parametry badania
            </a>
          </div>
          <div id="collapseOne" class="panel-collapse collapse in">
            <div class="panel-body">
              {{ form_start(form) }}
              {{ form_row(form.taskName, {'label': 'Nazwa zadania'}) }}
              <div class="form-group input-group">
                <span class="input-group-addon">Maszyna wytrzymałościowa</span>
                {{ form_widget(form.machine) }}
              </div>
              {{ form_errors(form.machine) }}
              <div class="form-group input-group">
                <span class="input-group-addon">Materiał</span>
                {{ form_widget(form.material) }}
              </div>
              {{ form_errors(form.material) }}
              <div class="form-group input-group">
                <span class="input-group-addon">Kształt próbki</span>
                {{ form_widget(form.shape) }}
              </div>
              {{ form_errors(form.shape) }}
              <div class="form-group input-group">
                <span class="input-group-addon">Rodzaj próby</span>
                {{ form_widget(form.type) }}
              </div>
              {{ form_errors(form.type) }}
              <div class="form-group input-group">
                <span class="input-group-addon">d<sub>0</sub></span>
                {{ form_widget(form.d0, {'attr': {'placeholder': 'Średnica próbki'} }) }}
                <span class="input-group-addon">mm</span>
                {{ form_errors(form.d0) }}
              </div>
              <div class="form-group input-group">
                <span class="input-group-addon">h<sub>0</sub></span>
                {{ form_widget(form.h0, {'attr': {'placeholder': 'Wysokość próbki'} }) }}
                <span class="input-group-addon">mm</span>
              </div>
              {{ form_errors(form.h0) }}
              <div class="form-group input-group">
                <span class="input-group-addon">t<sub>0</sub></span>
                {{ form_widget(form.t0, {'attr': {'placeholder': 'Temperatura próby'} }) }}
                <span class="input-group-addon">&deg;C</span>
              </div>
              {{ form_errors(form.t0) }}
              <div class="form-group input-group">
                <span class="input-group-addon">v<sub>0</sub></span>
                {{ form_widget(form.v0, {'attr': {'placeholder': 'Prędkość próby'} }) }}
                <span class="input-group-addon">mm/min</span>
              </div>
              {{ form_errors(form.v0) }}
            </div>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-heading">
            <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">
              Wyniki próby
            </a>
          </div>
          <div id="collapse2" class="panel-collapse collapse">
            <div class="panel-body">
              <div class="form-group input-group">
                <span class="input-group-addon">A<sub>g</sub></span>
                {{ form_widget(form.ag, {'attr': {'placeholder': 'Wydłużenie nieproporcjonalne procentowe'} }) }}
                <span class="input-group-addon">%</span>
              </div>
              {{ form_errors(form.ag) }}
              <div class="form-group input-group">
                <span class="input-group-addon">A<sub>gt</sub></span>
                {{ form_widget(form.agt, {'attr': {'placeholder': 'Wydłużenie całkowite procentowe'} }) }}
                <span class="input-group-addon">%</span>
              </div>
              {{ form_errors(form.agt) }}
              <div class="form-group input-group">
                <span class="input-group-addon">A<sub>t</sub></span>
                {{ form_widget(form.at, {'attr': {'placeholder': 'Wydłużenie całkowite procentowe '} }) }}
                <span class="input-group-addon">%</span>
              </div>
              {{ form_errors(form.at) }}
              <div class="form-group input-group">
                <span class="input-group-addon">E</span>
                {{ form_widget(form.e, {'attr': {'placeholder': 'Moduł Younga'} }) }}
                <span class="input-group-addon">GPa</span>
              </div>
              {{ form_errors(form.e) }}
              <div class="form-group input-group">
                <span class="input-group-addon">R<sub>p0.2</sub></span>
                {{ form_widget(form.r, {'attr': {'placeholder': 'Granica plastyczności'} }) }}
                <span class="input-group-addon">MPa</span>
              </div>
              {{ form_errors(form.r) }}
              <div class="form-group input-group">
                <span class="input-group-addon">F<sub>m</sub></span>
                {{ form_widget(form.fm, {'attr': {'placeholder': 'maksymalna siła '} }) }}
                <span class="input-group-addon">kN</span>
              </div>
              {{ form_errors(form.fm) }}
              <div class="form-group input-group">
                <span class="input-group-addon">R<sub>m</sub></span>
                {{ form_widget(form.rm, {'attr': {'placeholder': 'Wytrzymałość na rozciąganie'} }) }}
                <span class="input-group-addon">MPa</span>
              </div>
              {{ form_errors(form.rm) }}
              <div class="form-group input-group">
                <span class="input-group-addon">R<sub>b</sub></span>
                {{ form_widget(form.rb, {'attr': {'placeholder': 'Naprężenie przy zerwanu'} }) }}
                <span class="input-group-addon">MPa</span>
              </div>
              {{ form_errors(form.rb) }}
              <div class="form-group">
                <label>Dane wejściowe (TRA)</label>
                {{ form_widget(form.fileTra) }}
              </div>
              {{ form_errors(form.fileTra) }}
              <div class="form-group">
                <label>Raport (PDF)</label>
                {{ form_widget(form.filePdf) }}
              </div>
              {{ form_errors(form.filePdf) }}
            </div>
          </div>
        </div>
        <br/>
        <p><input type="submit" class="btn btn-outline btn-primary" value="Przejdź dalej"/></p>
        {{ form_end(form) }}
        <p><a class="btn btn-outline btn-danger" href="{{ path('index') }}">Przerwij</a></p>

      </div>
    </div>
  </div>
{% endblock %}