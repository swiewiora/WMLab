{% extends 'base.html.twig' %}
{% set counter = 0 %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Statyczna próba rozciągania</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Lista wyników
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        {% if lab1_wyniks %}
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    {% if is_granted("ROLE_ADMIN") %} <th>Zespół</th> {% endif %}
                                    <th>S<sub>0</sub></th>
                                    <th>S<sub>u</sub></th>
                                    <th>A<sub>10</sub></th>
                                    <th>Z</th>
                                    {#<th>Rh</th>#}
                                    <th>R<sub>eL</sub></th>
                                    <th>R<sub>eH</sub></th>
                                    <th>R<sub>m</sub></th>
                                    <th>R<sub>u</sub></th>
                                    {#<th>E</th>#}
                                    <th>Operacje</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for lab1_wynik in lab1_wyniks %}
                                {% set counter = counter + 1 %}
                                <tr>
                                    <td>{{ counter }}</td>
                                    {% if is_granted("ROLE_ADMIN") %} <td>{{ lab1_wynik.zespol }}</td> {% endif %}
                                    <td>{{ lab1_wynik.s0 }}</td>
                                    <td>{{ lab1_wynik.su }}</td>
                                    <td>{{ lab1_wynik.a10 }}</td>
                                    <td>{{ lab1_wynik.z }}</td>
                                    {#<td>{{ lab1_wynik.rH }}</td>#}
                                    <td>{{ lab1_wynik.reL }}</td>
                                    <td>{{ lab1_wynik.reH }}</td>
                                    <td>{{ lab1_wynik.rm }}</td>
                                    <td>{{ lab1_wynik.ru }}</td>
                                    {#<td>{{ lab1_wynik.e }}</td>#}
                                    <td>
                                        <a class="btn btn-outline btn-info btn-xs"
                                           href="{{ path('lab1_wynik_show', { 'id': lab1_wynik.id }) }}">
                                            Szczegóły
                                        </a>
                                        {% for lab1_pomiar in lab1_pomiars if lab1_pomiar.zespol == lab1_wynik.zespol %}
                                        <a class="btn btn-outline btn-success btn-xs"
                                           href="{{ path('lab1_pomiar_show', { 'id': lab1_pomiar.id }) }}">
                                            Przejdź do pomiaru
                                        </a>
                                        {% endfor %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        {% else %}
                            <div class="alert alert-info">
                                Brak pomiarów lub niewygenerowany wynik
                            </div>
                        {% endif %}
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
    
{% endblock %}
