{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Próba statyczna rozciągania</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Krok 1 - Wprowadź wymiary próbki
                </div>
                <div class="panel-body">
                    {{ form_start(form) }}
                        <div class="form-group input-group">
                            <span class="input-group-addon">L<sub>0</sub></span>
                            {{ form_widget(form.l0, {'attr': {'placeholder': 'Długość poczatkowa'} }) }}
                            <span class="input-group-addon">mm</span>
                            {{ form_errors(form.l0) }}
                        </div>
                        <div class="form-group input-group">
                            <span class="input-group-addon">D<sub>0</sub></span>
                            {{ form_widget(form.d0, {'attr': {'placeholder': 'Średnica początkowa'} }) }}
                            <span class="input-group-addon">mm</span>
                            {{ form_errors(form.d0) }}
                        </div>
                    {{ form_end(form) }}

                        <p><input type="submit" class="btn btn-outline btn-primary" value="Przejdź dalej" /> </p>
                <p><a class="btn btn-outline btn-danger" href="{{ path('lab1_pomiar_index') }}">Przerwij</a></p>
                </div>
            </div>
        </div>
    </div>


{% endblock %}