{% extends 'base.html.twig' %}
{% set counter = 0 %}

{% block stylesheets %}
    <!-- DataTables CSS -->
    <link href="{{ asset('datatables-plugins/dataTables.bootstrap.css') }}" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="{{ asset('datatables-responsive/dataTables.responsive.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Pomiary</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Lista pomiarów
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>l.p.</th>
                                    <th>L0</th>
                                    <th>D0</th>
                                    <th>Du</th>
                                    <th>Lu</th>
                                    <th>Pm</th>
                                    <th></th>
                                </tr>
                                <tr>
                                    <th></th>
                                    <th>[mm]</th>
                                    <th>[mm]</th>
                                    <th>[mm]</th>
                                    <th>[mm]</th>
                                    <th>[N]</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for lab1_pomiar in lab1_pomiars %}
                                {% set counter = counter + 1 %}
                                <tr>
                                    <td>{{ counter }}</td>
                                    <td>{{ lab1_pomiar.l0 }}</td>
                                    <td>{{ lab1_pomiar.d0 }}</td>
                                    <td>{{ lab1_pomiar.du }}</td>
                                    <td>{{ lab1_pomiar.lu }}</td>
                                    <td>{{ lab1_pomiar.pm }}</td>
                                    <td>
                                        <a class="btn btn-outline btn-info btn-xs"
                                           href="{{ path('lab1_pomiar_show', { 'id': lab1_pomiar.id }) }}">
                                            Szczegóły
                                        </a>
                                        <a class="btn btn-outline btn-warning btn-xs"
                                           href="{{ path('lab1_pomiar_edit', { 'id': lab1_pomiar.id }) }}">
                                            Edytuj
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                    </table>
                    <!-- /.table-responsive -->
                    <div class="well">
                        <h4>Operacje</h4>
                        <a class="btn btn-outline btn-lg btn-primary btn-block" href="{{ path('lab1_pomiar_new_step1') }}">Kreator nowego pomiaru</a>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>





    {% block javascripts %}
        <!-- DataTables JavaScript -->
        <script src="{{ asset('datatables/js/jquery.dataTables.min.js') }}"></script>
        <script src="{{ asset('datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
        <script src="{{ asset('datatables-responsive/dataTables.responsive.js') }}"></script>
        <script>
            $(document).ready(function() {
                $('#dataTables-example').DataTable({
                    responsive: true
                });
            });
        </script>
    {% endblock %}

{% endblock %}
