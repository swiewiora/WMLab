{% extends 'base.html.twig' %}
{% set counter = 0 %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Statyczna próba rozciągania</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Wyniki pomiarów
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                {% block pomiar_show %}

                <ul class="list-unstyled">
                    <li><strong>Długość początkowa: </strong>L<sub>0</sub> = {{ lab1_pomiar.l0 }} mm</li>
                    <li><strong>Średnica początkowa: </strong>D<sub>0</sub> = {{ lab1_pomiar.d0 }} mm</li>
                    <li><strong>Średnica po zerwaniu: </strong>D<sub>u</sub> = {{ lab1_pomiar.du }} mm</li>
                    <li><strong>Długość po zerwaniu: </strong>L<sub>u</sub> = {{ lab1_pomiar.lu }} mm</li>
                    <li><strong>Maksymalna siła: </strong>P<sub>m</sub> = {{ lab1_pomiar.pm }} N</li>
                    <li><strong>Dolna granica plastyczności: </strong>P<sub>eL</sub> = {{ lab1_pomiar.pel }} N</li>
                    <li><strong>Górna granica plastyczności: </strong>P<sub>eH</sub> = {{ lab1_pomiar.peh }} N</li>
                    <li><strong>Siła przy zerwaniu: </strong>P<sub>u</sub> = {{ lab1_pomiar.pu }} N</li>
                </ul>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                              <th>#</th>
                              <th>P</th>
                              <th>L<sub>1</sub></th>
                              <th>L<sub>2</sub></th>
                              <th>Operacje</th>
                            </tr>
                            <tr>
                                <th></th>
                                <th>[N]</th>
                                <th>[10<sup>-2</sup> mm]</th>
                                <th>[10<sup>-2</sup> mm]</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for lab1_pomiar_tab in lab1_pomiar_tabs %}
                            {% set counter = counter + 1 %}
                          <tr>
                            <td>{{ counter }}</td>
                            <td>{{ lab1_pomiar_tab.p }}</td>
                            <td>{{ lab1_pomiar_tab.l1 }}</td>
                            <td>{{ lab1_pomiar_tab.l2 }}</td>
                            <td>
                                  <a class="btn btn-outline btn-warning btn-xs"
                                     href="{{ path('lab1_pomiar_tab_edit', { 'id': lab1_pomiar_tab.id }) }}">
                                      Edytuj</a>
                            </td>
                          </tr>
                        {% endfor %}
                        </tbody>
                      </table>
                </div>
                <p><small>Data modyfikacji: {{ lab1_pomiar.date }}</small></p>
                {% endblock %}

                <div class="well">
                    <h4>Operacje</h4>

                    <p><a class="btn btn-outline btn-lg btn-primary btn-block"
                          href="{{ path('lab1_calc', { 'id': lab1_pomiar.id }) }}">Generuj wynik</a></p>
                    <p><a class="btn btn-outline btn-lg btn-default btn-block"
                          href="{{ path('lab1_pomiar_index') }}">Powrót do listy</a></p>
                    <p><a class="btn btn-outline btn-lg btn-warning btn-block"
                          href="{{ path('lab1_pomiar_edit', { 'id': lab1_pomiar.id }) }}">Edytuj</a>
                    {{ form_start(delete_form) }}
                    <input class="btn btn-outline btn-lg btn-danger btn-block" type="submit" value="Usuń Pomiar">
                    {{ form_end(delete_form) }}

                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
