{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Dodawanie nowego materiału</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          {{ form_start(form) }}
          <div class="form-group input-group">
            <span class="input-group-addon">Nazwa stopu</span>
            {{ form_widget(form.alloyName) }}
            {{ form_errors(form.alloyName) }}
          </div>
          <div class="form-group input-group">
            <span class="input-group-addon">Skład chemiczny</span>
            {{ form_widget(form.chemicalComposition) }}
            {{ form_errors(form.chemicalComposition) }}
          </div>
          <p><input type="submit" class="btn btn-outline btn-primary" value="Dodaj materiał"/></p>
          {{ form_end(form) }}
          <p><a class="btn btn-outline btn-danger" href="{{ path('index') }}">Przerwij</a></p>
        </div>
      </div>
    </div>
  </div>
{% endblock %}