{% extends 'base.html.twig' %}
{% set counter = 0 %}

{% block body %}
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Kokpit</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          UÅ¼ytkownicy
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th>#</th>
                <th>Nazwa</th>
                <th>Adres e-mail</th>
                <th>Aktywny</th>
                <th>Ostatnie logowanie</th>
              </tr>
              </thead>
              <tbody>
              {% for user in users %}
                {% set counter = counter + 1 %}
                <tr>
                  <td>{{ counter }}</td>
                  <td>{{ user.username }}</td>
                  <td>{{ user.email }}</td>
                  <td>
                    {% if user.enabled %}Tak
                      <a class="btn btn-xs btn-danger"
                         href="#">Zablokuj</a>
                    {% else %}Nie
                      <a class="btn btn-xs btn-success"
                         href="#">Aktywuj</a>
                    {% endif %}
                  </td>
                  <td>{{ user.lastLogin|date('H:m d.m.Y') }}</td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}