{% extends 'base.html.twig' %}
{% set counter = 0 %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Kokpit</h1>
        </div>
    </div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Użytkownicy
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Nazwa</th>
                            <th>Adres e-mail</th>
                            <th>zespół</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            {% set counter = counter + 1 %}
                            <tr>
                                <td>{{ counter }}</td>
                                <td>{{ user.username }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.zespol }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {% set counter = 0 %}
        <div class="panel panel-default">
            <div class="panel-heading">
                Zespoły
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Nazwa</th>
                            <th>Operacje</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for zespol in zespoly %}
                            {% set counter = counter + 1 %}
                            <tr>
                                <td>{{ counter }}</td>
                                <td>{{ zespol }}</td>
                                <td>
                                    {{ form_start(delete_form) }}
                                    <a class="btn btn-outline btn-info btn-xs"
                                       href="{{ path('zespol_show', { 'id': zespol.id }) }}">
                                        Szczegóły
                                    </a>
                                    <a class="btn btn-outline btn-warning btn-xs"
                                       href="{{ path('zespol_edit', { 'id': zespol.id }) }}">
                                        Edytuj
                                    </a>
                                    <input class="btn btn-outline btn-danger btn-xs" type="submit" value="Usuń">
                                    {{ form_end(delete_form) }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="well">
                    <h4>Operacje</h4>
                    <a class="btn btn-outline btn-lg btn-primary btn-block"
                       href="{{ path('zespol_new') }}">Nowy zespół</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}