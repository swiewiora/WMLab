{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
            <h1>Edycja odczytu z tensometrów</h1>

        {{ form_start(form) }}
        <div class="form-group input-group">
            <span class="input-group-addon">P</span>
            {{ form_widget(form.p, {'attr': {'placeholder': 'Siła'} }) }}
            <span class="input-group-addon">dN</span>
            {{ form_errors(form.p) }}
        </div>
        <div class="form-group input-group">
            <span class="input-group-addon">L<sub>1</sub></span>
            {{ form_widget(form.l1, {'attr': {'placeholder': 'Wskazanie pierwszego czujnika'} }) }}
            <span class="input-group-addon">10<sup>-2</sup> mm</span>
            {{ form_errors(form.l1) }}
        </div>
        <div class="form-group input-group">
            <span class="input-group-addon">L<sub>2</sub></span>
            {{ form_widget(form.l2, {'attr': {'placeholder': 'Wskazanie drugiego czujnika'} }) }}
            <span class="input-group-addon">10<sup>-2</sup> mm</span>
            {{ form_errors(form.l2) }}
        </div>
        <p><input type="submit" class="btn btn-warning" value="Zapisz zmiany" /></p>
        {{ form_end(form) }}

    <p><a class="btn btn-default" href="{{ path('lab1_pomiar_show', { 'id': lab1_pomiar.id }) }}">Powrót do podsumowania</a></p>
    {{ form_start(delete_form) }}
        <p><input class="btn btn-danger" type="submit" value="Usuń"></p>
    {{ form_end(delete_form) }}
        </div>
    </div>
</div>
{% endblock %}
