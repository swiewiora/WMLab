{% extends 'base.html.twig' %}
{% set counter = 0 %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1>Zespół {{ zespol.nazwa }}</h1>

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Login</th>
                        <th>Adres e-mail</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        {% set counter = counter + 1 %}
                        <tr>
                            <td>{{ counter }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="well">
                <h4>Operacje</h4>
                <p><a class="btn btn-outline btn-lg btn-warning btn-block"
                   href="{{ path('zespol_edit', { 'id': zespol.id }) }}">Edytuj</a></p>
                <p><a class="btn btn-outline btn-lg btn-default btn-block"
                   href="{{ path('dashboard') }}">Powrót</a></p>
                {{ form_start(delete_form) }}
                <input class="btn btn-outline btn-lg btn-danger btn-block"
                       type="submit" value="Usuń">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
